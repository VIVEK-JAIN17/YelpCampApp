<%- include('partials/header') -%>
<header class="jumbotron">
    <div class="container text-center">
        <h1 class="display-3">Add New CampGround</h1>
        <a class="btn btn-primary mt-4" href="/campgrounds">Go back</a>
        <!-- <p class="lead pt-4">View our hand-picked camp sites from all over the world!</p>
        <a class="btn btn-primary btn-lg mt-3" href="/campgrounds/new">Add new Campground</a> -->
    </div>
</header>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="desc" id="desc"
                        placeholder="Add a small Description"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Add Campground">
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>