<%- include('../partials/header') -%>
<header class="jumbotron">
    <div class="container text-center">
        <h1 class="display-3">Welcome to Yelp Camp!</h1>
        <p class="lead pt-4">View our hand-picked camp sites from all over the world!</p>
        <a class="btn btn-light btn-lg mt-3" href="/campgrounds/new">Add new Campground</a>
    </div>
</header>
<div class="container-md text-center">
    <div class="row justify-content-center mb-3">
        <div class="col-md-10">
            <h3 class="dsplay-4">Our Most Popular Campgrounds</h3>
            <hr>
        </div>
    </div>
    <div class="row justify-content-around d-none d-md-flex">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-6 col-lg-4 my-4" id="index-wrapper">
            <div class="card card-index">
                <div class="card-img">
                    <img class="img-fluid" src="<%= campground.image.url %>" alt="<%= campground.name%>">
                </div>
                <div class="card-body">
                    <div class="card-title">
                        <h4> <%= campground.name %> </h4>
                    </div>
                    <div class="card-text">
                        <p><%= campground.description.substring(0,100) %>...</p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm stretched-link">
                            View More</a>
                    </div>
                </div>
            </div>
        </div>
        <%});%>
    </div>
    <div class="row justify-content-center d-flex d-md-none">
        <div class="my-4 mx-sm-5 px-sm-3">
            <ul class="list-unstyled index blur">
                <% campgrounds.forEach(function(campground){ %>
                <li>
                    <div class="text-center align-self-center">
                        <a href="/campgrounds/<%= campground._id %>">
                            <img class="img-fluid pb-3" src="<%= campground.image.url %>" alt="<%= campground.name%>">
                        </a>
                    </div>
                    <div class="mb-4 text-left">
                        <header class="mb-2">
                            <h4 class="mb-1"> <%= campground.name %> </h4>
                            <div class="text-muted"> Posted By ~ <em>
                                    <a href="/users/<%= campground.author.id %>/profile">
                                        <%= campground.author.username %>
                                    </a> </em>
                            </div>
                        </header>
                        <div>
                            <p><%- campground.description.substring(0,100) -%>...</p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">View More</a>
                        </div>
                    </div>
                </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>