<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Yelp Camp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <!-- Bing Maps API -->
    <script type='text/javascript' src="https://www.bing.com/api/maps/mapcontrol?callback=loadMapScenario" async
        defer></script>
</head>

<body class="m-0 p-0">
    <nav class="navbar navbar-dark bg-dark navbar-expand-md">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center" id="ROW">
                <div class="col-auto">
                    <div class="row justify-content-start">
                        <div class="col-auto d-md-none">
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                        <div class="col-auto">
                            <div class="navbar-header d-inline">
                                <a href="/" class="navbar-brand">YelpCamp</a>
                            </div>
                        </div>
                        <div class="col-auto d-none d-md-block">
                            <ul class="nav navbar-nav">
                                <li class="nav-item d-inline">
                                    <a href="/campgrounds" class="nav-link">campgrounds</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <form action="/campgrounds" class="form text-center" method="GET">
                        <div class="form-group mx-auto my-0">
                            <div class="input-group search-bar">
                                <input type="text" class="form-control" name="search" id="search"
                                    placeholder="Search Campgrounds" />
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-outline-light">
                                        <i class="fa fa-search mx-2 mx-md-0"></i> <span
                                            class="d-none d-md-inline">Search</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-auto d-none d-md-block">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <% if(!currentUser) {%>
                            <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
                            <li class="nav-item"><a href="/register" class="nav-link">Sign Up</a></li>
                            <%} else { %>
                            <li class="nav-item">
                                <a href="/users/<%= currentUser._id %>/dashboard" class="nav-link">
                                    <i class="fa fa-user-circle"></i> <%= currentUser.firstname%>
                                </a>
                            </li>
                            <li class="nav-item"><a href="/logout" class="nav-link">Log Out</a></li>
                            <% }%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
        <% if(info && info.length > 0){ %>
        <div class="alert alert-info" role="alert"><%= info %></div>
        <% } %>
    </div>