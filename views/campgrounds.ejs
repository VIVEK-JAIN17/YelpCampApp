<%- include('partials/header') -%>
<header class="jumbotron">
    <div class="container text-center">
        <h1 class="display-3">Welcome to Yelp Camp!</h1>
        <p class="lead pt-4">View our hand-picked camp sites from all over the world!</p>
        <a class="btn btn-primary btn-lg mt-3" href="/campgrounds/new">Add new Campground</a>
    </div>
</header>
<div class="container text-center">
    <div class="row justify-content-center mb-3">
        <div class="col-md-10">
            <h3 class="dsplay-4">Our Most Popular Campgrounds</h3>
        </div>
    </div>
    <div class="row justify-content-around">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-10 col-md-6 col-lg-4 my-3">
            <div class="card">
                <div class="card-img">
                    <img class="img-fluid" src="<%= campground.image %>" alt="will add soon">
                </div>
                <div class="card-body">
                    <div class="card-title">
                        <h4> <%= campground.name %> </h4>
                    </div>
                    <div class="card-subtitle">card-subtitle</div>
                    <div class="card-text">
                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Perspiciatis, amet.</p>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include('partials/footer') -%>